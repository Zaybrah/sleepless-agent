# Slack Bot
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Claude Code CLI (optional - defaults to 'claude' from PATH)
# CLAUDE_CODE_BINARY_PATH=/usr/local/bin/claude

# Z.ai Configuration (alternative API provider)
# Uncomment these if you're using Z.ai instead of Claude Code Pro
# See docs/guides/z-ai-setup.md for complete setup instructions
# ANTHROPIC_AUTH_TOKEN=your-zai-api-key-here
# ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic
# API_TIMEOUT_MS=3000000
# ANTHROPIC_DEFAULT_HAIKU_MODEL=GLM-4.5-Air
# ANTHROPIC_DEFAULT_SONNET_MODEL=GLM-4.6
# ANTHROPIC_DEFAULT_OPUS_MODEL=GLM-4.6

# Agent Config
AGENT_WORKSPACE_ROOT=./workspace
AGENT_DB_PATH=./workspace/data/tasks.db
AGENT_RESULTS_PATH=./workspace/data/results

# Git
GIT_USER_NAME=Sleepless Agent
GIT_USER_EMAIL=agent@sleepless.local

# WebUI Authentication (set WEBUI_PASSWORD to enable basic auth)
WEBUI_USERNAME=admin
WEBUI_PASSWORD=

# Optional
LOG_LEVEL=INFO
DEBUG=false
