# Docker Build and Push Workflow
# This workflow builds and pushes Docker images to Docker Hub or GitHub Container Registry
# Uncomment and configure as needed

name: Docker Build and Push

on:
  push:
    branches:
      - main
      - develop
    tags:
      - 'v*.*.*'
  pull_request:
    branches:
      - main
  workflow_dispatch:

env:
  # Set this to your Docker Hub username or GitHub Container Registry
  # DOCKER_HUB_USERNAME: your-dockerhub-username
  # GHCR_REGISTRY: ghcr.io
  # IMAGE_NAME: sleepless-agent

jobs:
  # Test the Docker build
  test-build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Test Docker build
        uses: docker/build-push-action@v5
        with:
          context: .
          push: false
          tags: sleepless-agent:test
          cache-from: type=gha
          cache-to: type=gha,mode=max

